


class Utils:
	
	link = bttnKnob( 'copy from selected' )
	
	create_3D_ref = bttnKnob( 'Create 3D Reference') # crea una camara y un card que controlan este card 3D
	
	freeze_animations = bttnKnob( 'Freeze Controller')


def link( this ):
	
	nodes = nuke.selectedNodes()
	
	for src_node in nodes:

		if src_node.Class() == 'Card2':

			for trg_knob in this.SORTED_KNOBS:
				
				NAME = trg_knob.name()
				
				if NAME == 'name':
					
					break
	
				if NAME in this( src_node ).SORTED_NAMES:

					trg_knob.setExpression( '%s.%s' % ( src_node.name() , trg_knob.name() ) )
		
		break